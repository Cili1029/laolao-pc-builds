<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laolao.mapper.forum.LikeMapper">
    <select id="queryLike" resultType="com.laolao.pojo.forum.entity.Like">
        SELECT like_type, like_id, status
        FROM forum_like
        WHERE user_id = #{userId}
        AND status = 1
        AND (like_type, like_id) IN
        <foreach collection="targets" item="target" open="(" close=")" separator=",">
            (#{target.likeType}, #{target.likeId})
        </foreach>
    </select>
</mapper>
