<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laolao.mapper.BundleMapper">
    <select id="getByConditions" resultType="com.laolao.pojo.entity.Bundle" parameterType="Bundle">
        SELECT *
        FROM bundles
        join categories  on categories.id = bundles.category_id
        <where>
            <if test="categoryId != null and categoryId != '' and categoryId != 0">
                and category_id = #{categoryId}
            </if>
            <if test="searchContent != null and searchContent != ''">
                and bundles.name like concat('%',#{searchContent},'%')
            </if>
        </where>
    </select>
</mapper>
