<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laolao.mapper.shop.BundleMapper">
    <select id="getByConditions" resultType="com.laolao.pojo.shop.entity.Bundle" parameterType="com.laolao.pojo.shop.entity.Bundle">
        SELECT *
        FROM shop_bundle
        join shop_category on shop_category.id = shop_bundle.category_id
        <where>
            <if test="categoryId != null and categoryId != '' and categoryId != 0">
                and category_id = #{categoryId}
            </if>
            <if test="searchContent != null and searchContent != ''">
                and shop_bundle.name like concat('%',#{searchContent},'%')
            </if>
        </where>
    </select>

    <select id="ListFromCart" resultType="com.laolao.pojo.shop.vo.CartProductVO" parameterType="com.laolao.pojo.shop.vo.CartProductVO">
        select b.id, c.product_type, b.name, b.image, b.price, c.quantity
        from shop_bundle b
        join shop_cart_item c on c.product_id = b.id
        where c.user_id = #{userId}
        and b.id in
        <foreach collection="productIds" item="productId" open="(" separator="," close=")">
            #{productId}
        </foreach>
        and c.product_type = 2
    </select>
</mapper>
